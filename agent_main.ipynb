# 5. DEFINE TOOLS
pdf_reader = PDFReader()
url_loader = URLLoader()
quiz_maker = QuizMaker()

# 6. MULTI-AGENT WORKFLOW FUNCTION
def run_edu_session(topic: str, level: str = "beginner"):
    # Step 1: Gather materials
    print("Fetching content...")
    docs = url_loader.fetch_material(topic)
    pdf_docs = pdf_reader.load_pdfs(topic)
    all_docs = docs + pdf_docs
    
    # Step 2: Summarize
    print("Summarizing content...")
    summary = content_agent.summarize(all_docs)
    
    # Step 3: Generate explanation
    explanation = tutor_agent.explain(summary, level)
    
    # Step 4: Generate quiz
    quiz = eval_agent.generate_quiz(summary, num_questions=5)
    
    # Step 5: Coach feedback
    coach_message = coach_agent.motivate(topic)
    
    # Step 6: Return output
    output = {
        "summary": summary,
        "explanation": explanation,
        "quiz": quiz,
        "coach": coach_message
    }
    return output

# 7. DEMO RUN
topic = "Photosynthesis"
